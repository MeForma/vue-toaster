.vue-toaster-container
  position fixed
  display flex
  top 0
  bottom 0
  left 0
  right 0
  padding 2em
  overflow hidden
  z-index 9999
  pointer-events none

  &--top, &--center
    flex-direction column
  &--bottom
    flex-direction column-reverse
  &--center
    justify-content center

  @media screen and (max-width 768px)
    padding 0
    position fixed !important
